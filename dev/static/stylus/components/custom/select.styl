.select-gl
	width max-content
	//margin-bottom 10px
	&--icon
		.select-gl
			&__list
				border-color white
			&__this
				width 168px
			&__value
				padding 0 30px 0 10px
				justify-content flex-start
				background white
				font-weight 300
				color gray
				border-color gray
			&__item
				font-weight 300
			&__drop
				right 10px
			&__icon
				size(15px)
				fill gray
				margin-right 7px
	&__this
		width 132px
		position relative
		
	&__value
		position relative
		//padding 0 15px 0 0
		size(100%, 33px)
		display flex
		justify-content center
		align-items center
		border 1px solid #F9B300
		border-radius 5px
		font-family: 'Gilroy';
		font-style: normal;
		font-weight: 500;
		font-size: 18px;
		line-height: 21px;
		background #FFF7E1
	&__drop
		size(20px)
		fill black
		position absolute
		right 10px
		top 8px
		transition()
	&__list
		overflow hidden
		display none
		width 100%
		position absolute
		top calc(100% + 2px)
		left 0
		border-radius 5px
		border 1px solid #F9B300
		background #FFF7E1
		z-index 15
	&__item
		padding 0 15px
		width 100%
		height 30px
		display flex
		justify-content center
		align-items center
		font-family: 'Gilroy';
		font-style: normal;
		font-weight: 500;
		font-size: 18px;
		line-height: 21px;
		cursor pointer
		transition()
	.icons-js
		svg
			size(15px)
			fill gray
			margin-right 7px
			transition()
	.selected
		background-color #F9B300
		color white
		svg
			fill white
	.select__active
		.select-gl__drop
			transform rotate(-180deg)