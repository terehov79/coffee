@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'

body
  font-family mainFont
  font-weight 400
  line-height 1.3
  font-size baseFontSize
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

h1, h2, h3, h4, h5, h6
  margin 0

ul, li
  list-style-type none
  margin 0
  padding 0

p
  margin 0

a
  color baseBlack
  text-decoration none
  &:hover
    text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle

image
  display block

textarea
  resize none

section
  position relative

input,
select,
button,
textarea
  outline none !important

*, *::before, *::after
  box-sizing border-box

.wrapper
  min-height 100vh
  display flex
  flex-direction column
  overflow hidden

.content
  flex 1 0 auto

// VW Init
vwInit = false

// VW bootstrap grid system
.container
  @media(min-width: 1400px) {
    max-width px(1660)  
  }
  






// Components
@import 'components/components.styl'

// Modules
@import "modules/modules.styl"