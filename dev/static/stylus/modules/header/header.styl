.header
  size(100%, 100px)
  display flex
  justify-content space-between
  align-items center
  background-color transparent
  @media $xs-and-smaller
    height 80px
  &--wrap
    width 100%
    position fixed
    z-index 9999
    transition: transition 
    top 0
    left 0
    &.active
      background-color #fff;
      box-shadow: 1px 2px 10px rgba(0,0,0,0.2);

  &__logo
    width 20%
    @media $lg-and-smaller
      width: auto
      display flex
      justify-content space-between
      align-items center
      img
        margin-left 40%
    @media $sm-and-smaller
      img
        size(179px, 80px)
    @media $xs-and-smaller
      img
        size(110px, 50px)
  &__burger
    display none
    size(50px, 35px)
    cursor pointer
    @media $lg-and-smaller
      display block
    @media $sm-and-smaller
      size(35px, 20px)
  &__menu.open
    transform: translateX(0);
  &__menu
    width: 60%
    @media $lg-and-smaller
      padding 20px 30px
      size(100%)
      position fixed
      top 0
      left 0
      background-color white
      transform: translateX(-100%);
	    transition: transform 0.5s;
    @media $sm-and-smaller
      padding 30px
    .menu-logo
      display none
      @media $lg-and-smaller
        display flex
        justify-content space-between
        align-items center
      @media $xs-and-smaller
        img
          size(110px, 50px)
      .close
        size(60px, 30px)
        cursor pointer
        position relative
        @media $sm-and-smaller
          size(35px, 20px)
        &:before, &:after
          position absolute
          top 0
          left 0
          transform rotateZ(-45deg)
          background: black
          size(100%, 3px)
          content ""
          border-radius 20px
        &:after
          transform rotateZ(45deg)
        span
          display block
          size(100%, 3px)
          border-radius 20px
          background: transparent
    .menu-icons
      display none
      @media $lg-and-smaller
        display block
        svg
          size(38px)
          fill baseBlack
        a:not(:last-child)
          padding-right 53px
    .menu-socials
      display none
      @media $lg-and-smaller
        display block
        padding 200px 0
        display flex
        flex-direction: column
        justify-content center
        align-items center
      @media $sm-and-smaller
        padding 80px 0
      &__email
        padding-bottom 70px
        @media $xs-and-smaller
          padding-bottom 30px
        a
          font-family: 'Gilroy';
          font-style: normal;
          font-weight: 700;
          font-size: 32px;
          line-height: 130%;
          color: #222222;
      &__buttons
        a:not(:last-child)
          padding-right 30px
        img
          size(102px)
          @media $md-and-smaller
            size(75px)
          @media $xs-and-smaller
            size(50px)
  &__icons
    width 20%
    display flex
    justify-content flex-end
    align-items center
    svg
      size(32px)
      fill baseBlack
      @media $sm-and-smaller
        size(24px)
    a:not(:last-child)
      padding-right 53px
      @media $sm-and-smaller
        padding-right 30px
      @media $xs-and-smaller
        padding-right 20px