		padding 240px 0 0
		h2
			@extend .title_h2
			color white
			padding-bottom 100px
		p 
			@extend .title_p
			color white
			padding-bottom 30px		
			max-width 1246px
		&__btn
			padding-top 70px

.news
	min-height: 1340px
	max-width: 1920px
	background-image url('../img/content/background02.png')
	background-size: contain
	background-repeat no-repeat
	background-position 0 0
	margin 0 auto
	&__head
		width 100%
		padding-bottom 50px
		display flex
		justify-content space-between
		align-items center
		h2
			@extend .title_h2
			padding-top 36px
	&__text
		width: 100%
		height 400px
		display flex
		justify-content space-between
		align-items flex-start
		flex-direction: column
		padding: 40px 80px
		background-color #fff
		box-shadow: 0px 0px 30px rgba(146, 146, 146, 0.2);
		border-radius: 20px
		p.head
			font-family: 'Gilroy';
			font-style: normal;
			font-weight: 700;
			font-size: 25px;
			line-height: 130%;
			color: #000000;
		p
			font-family: 'Gilroy';
			font-style: normal;
			font-weight: 500;
			font-size: 20px;
			line-height: 130%;
	&__link
		a
			font-family: 'Gilroy';
			font-style: normal;
			font-weight: 500;
			font-size: 20px;
			line-height: 24px;
			color: #F9B300;
		svg
			size(50px)
			fill #F9B300;
	&__img
		width: 336px;
		height: 400px;
		img
			width 100%
			height: 100%
			position relative
			z-index 5

