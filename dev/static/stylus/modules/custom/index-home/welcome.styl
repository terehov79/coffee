.welcome
	width 100%
	padding-top 150px
	&--wrap
		width 100%
	&__hero
		width 100%
		position: relative
		z-index -10
		&::before
			size(1902px, 1913px)
			content ""
			position absolute
			display block
			background-image url('../img/content/background-right.png')
			background-size: contain
			background-repeat no-repeat
			background-position 0 0
			top -130%
			left 42%
		&::after
			size(1333px, 1472px)
			content ""
			position absolute			
			top 120%
			left -50%
			display block
			background-image url('../img/content/background-left.png')
			background-size: contain
			background-repeat no-repeat
			background-position 0 0
		h1
			font-family: 'Gilroy';
			font-style: normal;
			font-weight: 900;
			font-size: 80px;
			line-height: 100px;
			color: #000000;
			padding-bottom 60px
		p.title_p
			padding-bottom 30px
		b
			margin-left 8px
	&__btn
		padding-top 50px

.catalog
	width 100%
	h2.title_h2
		padding 276px 0 83px
	.card
		size(100%, auto)
		padding 20px
		background: #FFF
		box-shadow: 0px 0px 30px rgba(146, 146, 146, 0.2);
		border-radius: 20px;
		display flex
		flex-direction: column
		justify-content space-between
		align-items center
		transition: transition
		&:hover
			transform: scale(1.05) translateY(-10px)
			.card__btn
				opacity 1				
		&__pic
			size(100%, 278px)
			display flex
			justify-content center
			align-items center
			margin-bottom 40px
		p
			font-family: 'Gilroy';
			font-style: normal;
			font-weight: 700;
			font-size: 25px;
			line-height: 30px;
			text-align: center;
			color: #000000;
		&__btn
			padding-bottom: 25px
			transition transition
			opacity 0

.products
	width 100%
	h2
		@extend .title_h2
		padding 90px 0 50px
		text-align right
	p.title_p
		text-align right
	.slider
		width 100%
		padding 0 100px 0 280px
    .slide
			padding-top 100px
			.card
				width: 400px;
				height: auto
				padding 21px 37px 50px 38px
				background: white
				box-shadow: 0px 0px 20px rgba(146, 146, 146, 0.25);
				border-radius: 20px;
				border 1px solid lightgray
				display flex
				flex-direction: column
				justify-content flex-start
				align-items flex-start
				.select-gl.weight
					width 100%
					display flex
					justify-content flex-end
				p.head
					padding 0
					font-family: 'Gilroy';
					font-style: normal;
					font-weight: 900;
					font-size: 25px;
					line-height: 31px;
					color: #222222;
				p
					padding 10px 0 30px
					font-family: 'Gilroy';
					font-style: normal;
					font-weight: 500;
					font-size: 18px;
					line-height: 21px;
					color: #222222;
				&__section
					width 100%
					display flex
					justify-content center
					align-items center
					padding 40px 0 30px
					position relative
					&::before
						content "%"
						display flex
						justify-content center
						align-items center
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 700;
						font-size: 35px;
						line-height: 42px;
						color: #000000;
						position absolute
						top -90px
						left 0
						size(70px)
						background: #F9B300
						border-radius: 50%
					&::after
						content "Скидки"
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 700;
						font-size: 18px;
						line-height: 22px;
						color: #F9B300;
						position absolute
						top 0
						left 0
				&__img
					width 50%
				&__info
					width 50%
					padding-left 20px
					span.star
						margin-top 8px
						display inline-block
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 700;
						font-size: 20px;
						line-height: 24px;
						color: #222222;
					a.review
						margin-left 7px
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 500;
						font-size: 14px;
						line-height: 16px;
						color: #5B5B5B;
				&__seeds
					padding 20px 0 10px
					.star-rating
						background-image: url(../img/svg/seed-empty.svg) !important;
					.star-rating .star-value
						background-image: url(../img/svg/seed.svg) !important;
				&__taste
					width 100%
					position relative
					.star-rating
						background-image: url(../img/svg/circle-empty.svg) !important;
					.star-rating .star-value
						background-image: url(../img/svg/circle.svg) !important;
					p
						padding: 10px 0
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 500;
						font-size: 18px;
						line-height: 21px;
						color: #222222;
				&__price
					width 100%
					display flex
					justify-content space-between
					align-items center
					span
						font-family: 'Gilroy';
						font-style: normal;
						font-weight: 900;
						font-size: 35px;
						line-height: 44px;
						color: #222222;
						position relative
						&::before
							content "350 ₽"
							font-family: 'Gilroy';
							font-style: normal;
							font-weight: 500;
							font-size: 25px;
							line-height: 29px;
							text-align: center;
							text-decoration-line: line-through;
							color: #C6C6C6;
							position absolute
							top -50%
							left 0

	a.seeall
		font-family: 'Gilroy';
		font-style: normal;
		font-weight: 500;
		font-size: 20px;
		line-height: 24px;
		color: #000000;
		text-decoration-line: underline;
		display flex
		justify-content flex-end
		align-items center
		padding-top 58px

